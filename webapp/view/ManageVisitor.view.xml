<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="poc.zvms.controller.ManageVisitor"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:tnt="sap.tnt">
	<App>
		<pages>
			<Page title="{i18n>managevisitortitle}" navButtonPress="_onNavBack" showNavButton="true">
				<content>
					<tnt:ToolHeader>
						<Button text="Dashboard" icon="sap-icon://bbyd-dashboard" type="Transparent" press="_onPressMenu">
							<layoutData>
								<OverflowToolbarLayoutData priority="Low"/>
							</layoutData>
						</Button>
						<Button text="Manage Visitors" icon="sap-icon://visits" type="Transparent" press="_onPressMenu">
							<layoutData>
								<OverflowToolbarLayoutData priority="Low"/>
							</layoutData>
						</Button>
						<Button text="Reports" icon="sap-icon://manager-insight" type="Transparent" press="_onPressMenu">
							<layoutData>
								<OverflowToolbarLayoutData priority="Low"/>
							</layoutData>
						</Button>
					</tnt:ToolHeader>
					<Table id="tblVisitors" inset="false" visible="true" class="sapUiResponsiveMargin" growing="true" growingScrollToLoad="true" width="auto"
						growingThreshold="10" items="{path:'/Visitors'}" noDataText="{i18n>nodatafound}">
						<headerToolbar>
							<Toolbar>
								<content>
									<Title text="List of Visitors" level="H2"/>
									<ToolbarSpacer/>
									<SearchField liveChange="_onSearch" width="50%"/>
									<Button id="btnAdd" icon="sap-icon://add" press="_onAddVisitor" type="Accept" tooltip="New Visitor"/>
								</content>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column demandPopin="true">
								<Text text="Gate Pass No."/>
							</Column>
							<Column demandPopin="true">
								<Text text="Name"/>
							</Column>
							<Column demandPopin="true" minScreenWidth="Tablet">
								<Text text="Mobile No"/>
							</Column>
							<Column demandPopin="true" hAlign="Center" minScreenWidth="Tablet">
								<Text text="Department"/>
							</Column>
							<Column demandPopin="true" hAlign="Center" minScreenWidth="Tablet">
								<Text text="Visited Date"/>
							</Column>
							<Column demandPopin="true" hAlign="Center" minScreenWidth="Tablet">
								<Text text="Get Pass"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem vAlign="Middle" type="Navigation" press="_onEdit">
								<cells>
									<Text text="{VisitorId}"/>
									<Text text="{FullName}"/>
									<Text text="{MobileNo}"/>
									<Text text="{Department}"/>
									<Text text="{VisitDate}"/>
									<Button id="btnPass" icon="sap-icon://print" press="onPrint" type="Accept" tooltip="Get PAss"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>